  file = {G\:\\My Drive\\Papers\\Blondel et al - 2016 - Axisymmetric Tokamak Equilibria computed with a Predefined Safety Factor.pdf;C\:\\Users\\Josch\\Zotero\\storage\\7TUSJICG\\261302.html}
